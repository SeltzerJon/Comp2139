@model Assignment1Final.Models.Item
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Item</h1>

<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Name:</label>
        <input type="text" class="form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Description:</label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Minimum Bid Amount:</label>
        <input type="number" class="form-control" asp-for="MinimumBidAmount" />
        <span asp-validation-for="MinimumBidAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Start Bid Date:</label>
        <input type="datetime-local" class="form-control" asp-for="StartBidDate" />
        <span asp-validation-for="StartBidDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>End Bid Date:</label>
        <input type="datetime-local" class="form-control" asp-for="EndBidDate" />
        <span asp-validation-for="EndBidDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Condition:</label>
        <input type="text" class="form-control" asp-for="Condition" />
        <span asp-validation-for="Condition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Category:</label>
        <input type="text" class="form-control" asp-for="Category" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Image:</label>
        <input type="file" class="form-control-file" name="image" />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>